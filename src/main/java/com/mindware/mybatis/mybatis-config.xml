<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	
	<properties resource="resources/application.properties"/>
	
	<typeAliases>
		<typeAlias type="com.mindware.modelo.Contacto" alias="Contacto"></typeAlias>
		
	</typeAliases>
	
	<environments default="production">
		<environment id="production">
			<transactionManager type="JDBC"/>
			<dataSource type="POOLED">   
				<property name="driver" value="org.postgresql.Driver"/>
				<property name="url" value="jdbc:postgresql://localhost:5432/dbsms?searchpath=public"/>
				<property name="username" value="postgres"/>
				<property name="password" value="postgres"/>
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<mapper resource="com/mindware/mappers/ContactoMapper.xml"/>
	</mappers>
</configuration>
